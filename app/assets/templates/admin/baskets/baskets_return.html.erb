    <div class="modal-body">
      <uib-alert ng-repeat="alert in alerts" type="{{alert.type}}" close="closeAlert($index)">{{alert.msg}}</uib-alert>

      <div class="panel panel-default bg-light">
        <div class="panel-body">
	  <form name="returnBasketsForm" class="form-horizontal" ng-controller="BasketsController">
            <div class="form-group">
              <div class="col-sm-12">
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-user"></i></span>
		  <select name="client_name_for_return"
                         class="form-control"
			 ng-model="client_name_for_return"
                         required="required">
			<option value="" disabled selected hidden>Client</option>
			<option value="Cartman">E. Cartman</option>
		  </select>
                </div>
		<a href="#" ng-click="custom_card_func($event)" class="text-sm">{{ 'customer_card'|translate  }}</a>
              </div>
            </div>
